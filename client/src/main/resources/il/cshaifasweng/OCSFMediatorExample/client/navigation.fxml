<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="il.cshaifasweng.OCSFMediatorExample.client.NavigationController">

    <!-- Navigation Bar (Top Section) -->
    <top>
        <HBox spacing="10" style="-fx-padding: 10px; -fx-background-color: #333;">
            <Button onAction="#showHomePage" style="-fx-text-fill: white; -fx-background-color: #555;" text="Home" />
            <Button onAction="#showMenuList" style="-fx-text-fill: white; -fx-background-color: #555;" text="Menu List" />
            <Button onAction="#showSelectBranch" style="-fx-text-fill: white; -fx-background-color: #555;" text="Branches" />
            <Button fx:id="logInBtn" onAction="#showLogin" style="-fx-text-fill: white; -fx-background-color: #555;" text="Log In" />
            <Button onAction="#showRegister" style="-fx-text-fill: white; -fx-background-color: #555;" text="Register" />
         <Text fx:id="welcomeState" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="" textAlignment="RIGHT" />
        </HBox>
    </top>

    <!-- Dynamic Content Area (Center Section) -->
    <center>
        <StackPane fx:id="contentArea" />
    </center>

</BorderPane>
