<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:controller="il.cshaifasweng.OCSFMediatorExample.client.ComplaintController"
            xmlns:fx="http://javafx.com/fxml"
            xmlns="http://javafx.com/javafx"
            prefWidth="700" prefHeight="600">

   <children>
      <ListView fx:id="list_of_complaints" layoutX="50" layoutY="50" prefWidth="600" prefHeight="300" />
      <TextField fx:id="solutionField" layoutX="50" layoutY="370" prefWidth="600" />
      <Button fx:id="updateButton" layoutX="300" layoutY="420" text="Update Complaint" onAction="#updateButtonClicked" />
   </children>
</AnchorPane>
